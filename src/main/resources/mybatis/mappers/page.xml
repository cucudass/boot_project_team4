<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.PageDAO">
	<sql id="criteria">
<!-- 	1번 방법 -->
<!--		<if test="type == 'T'.toString()">-->
<!-- 	2번 방법 -->
		<if test='type == "T"'>
			where title like concat('%', #{keyword}, '%')
		</if>
		<if test='type == "C"'>
			where content like concat('%', #{keyword}, '%')
		</if>
		<if test='type == "W"'>
			where authorid like concat('%', #{keyword}, '%')
		</if>
	</sql>
	
<!--         <![CDATA[]]> : mybatis 에서 특수문자 인식 처리 -->
    <select id="listWithPaging" resultType="com.boot.dto.BoardtbDTO">
    	<![CDATA[
			select rownum, boardno, authorid, title, content, adate, boardhit 
			 from (select rownum, boardno, authorid, title, content, adate, boardhit 
			  from (select row_number() over(order by boardno desc) as rownum
							 , boardno
							 , authorid, title, content
							 , adate, boardhit 
						  from boardtb
						  ]]>
						  <include refid="criteria"></include>
						  <![CDATA[
						 order by boardno desc) a
				where rownum <= (#{pageNum} * #{amount})
				  ) aa
			where rownum > (#{pageNum}-1)*#{amount}
    	]]>
    </select>
    <select id="getTotalCount" resultType="int">
    	select count(*) from boardtb
    	<include refid="criteria"></include>
    </select>
</mapper>











